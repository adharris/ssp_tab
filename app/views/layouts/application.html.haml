!!!
%html
  %head
    %title SSP | #{@title}
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'blueprint/screen', :media => 'screen'
    = stylesheet_link_tag 'blueprint/print', :media => 'print'
    = stylesheet_link_tag 'jqueryui/jquery-ui-1.8.9.custom.css'
    = csrf_meta_tag 
    
  %body
    .container
      #header.span-24
        .span-16 
          %h1 SSP Food Tracking Application
        #user-pane.span-8.last
          %div
            - if user_signed_in?
              %span= gravatar_for current_user, :size => 24
              %span= current_user.name
              %span= link_to "account", current_user
              %span= link_to "sign out", destroy_user_session_path
            - else
              = link_to "sign in", new_user_session_path
            
      #main-nav.span-24.last.nav-bar.append-bottom
        = render_navigation :level => 1


      #third-nav.span-24.last.nav-bar
        = render_navigation :level => 3

      = render 'shared/flash', :flash => flash

      #page-info.container.append-bottom
        .span-24.last
          %h2= @title
        .blank.span-24.last
        #site-nav= render_navigation :level => 2

      #content.container

        .span-24.last= yield

      #footer.span-24.last

  
      = javascript_include_tag 'jquery/jquery-1.4.2.min'
      = javascript_include_tag 'jquery/jquery-ui-1.8.9.custom.min.js'
      = javascript_include_tag 'jquery/jquery-ui-widgets.js'
      = javascript_include_tag :all
      = yield :javascript
