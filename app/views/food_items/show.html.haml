.span-12.properties
  %dl
    %dt Name
    %dd= @food_item.name
    %dt Category
    %dd= @food_item.food_item_category.name
    %dt Unit
    %dd= @food_item.base_unit
    %dt Default Taxed
    %dd= @food_item.default_taxed ? "Yes" : "No"

.span-12.last.properties
  %dl
    %dt Total Purchased
    %dd #{(@purchases.map &:total_base_units).sum} #{@food_item.base_unit}
    %dt Average Price
    %dd
      = number_to_currency((@purchases.map {|p| p.total_base_units * p.price_per_base_unit.abs }).sum / (@purchases.map &:total_base_units).sum)
      = @food_item.base_unit
    %dt Total Consumed
    %dd
      = sprintf '%.2f', (@inventories.map &:consumed).sum
      = @food_item.base_unit

.span-12.prepend-top
  %h3 Purchases
  .tablewrapper
    %table
      %thead
        %tr
          %th Program
          %th Date
          %th Quantity
          %th Price
      %tbody
        - @purchases.each do |purchase|
          %tr
            %td= purchase.purchase.program
            %td= purchase.purchase.date
            %td #{purchase.total_base_units} #{@food_item.base_unit}
            %td #{number_to_currency(purchase.price_per_base_unit.abs)} / #{@food_item.base_unit}

.span-12.prepend-top.last
  %h3 Inventories
  .tablewrapper
    %table
      %thead
        %tr
          %th Program
          %th Date
          %th Consumed
          %th Price
      %tbody
        - @inventories.each do |inventory|
          %tr
            %td= inventory.food_inventory.program
            %td= inventory.food_inventory.date
            %td #{inventory.consumed} #{@food_item.base_unit}
            %td #{number_to_currency(inventory.total_price)} #{@food_item.base_unit} 
            
