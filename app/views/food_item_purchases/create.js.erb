$("#food_item_purchases tbody").prepend("<%= escape_javascript( render(@food_item_purchase)) %>").hide().fadeIn(500);
<% @purchase.food_item_purchases.taxable.each do |food_item| %>
  $("tr[food_item_purchase_id='<%= food_item.id %>']").replaceWith("<%= escape_javascript(render(food_item)) %>");
<% end %>
$("#new_food_item_purchase").replaceWith("<%= escape_javascript( render( 'food_item_purchases/form', :food_item_purchase => @purchase.food_item_purchases.new, :remote => true)) %>");
$("#food_item_purchase_food_item_id").combobox();
$("#new_food_item_purchase :input:visible:first").focus();
<%= render 'purchases/purchase_totals', :purchase => @purchase %>
