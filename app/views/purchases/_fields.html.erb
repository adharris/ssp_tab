<%= semantic_form_for purchase, :url => purchase.new_record? ? program_purchases_path(purchase.program) : purchase_path(purchase) do |form| %>
  <%= form.inputs do %>
    <%= form.input :vendor, :as => :radio, :collection => purchase.program.site.vendors %>
    <%= form.input :purchaser, :as => :select, :collection => purchase.program.users + User.admin %>
    <%= form.input :date, :as => :datepicker %>
    <%= form.input :tax, :input_html => { :size => 15 }, :hint => "Enter the tax, in dollars" %>
    <%= form.input :total, :input_html => { :size => 15 }, :hint => "Enter the total, including tax" %>
  <% end %>
  <%= form.buttons %>
<% end %>
