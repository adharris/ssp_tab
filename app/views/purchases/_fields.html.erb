<%= semantic_form_for purchase, :url => program_purchases_path(purchase.program) do |form| %>
  <%= form.inputs do %>
    <%= form.input :vendor, :as => :radio, :collection => purchase.program.site.vendors %>
    <%= form.input :purchaser, :as => :select, :collection => purchase.program.users %>
    <%= form.input :date, :as => :datepicker %>
    <%= form.input :total, :input_html => { :size => 15 } %>
  <% end %>
  <%= form.buttons %>
<% end %>
